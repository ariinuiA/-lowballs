<div class="banner">
  <div class="container">
    <h1>Welcome to Lowballs</h1>
    <p>Browse board games available for rent.</p>
  </div>
</div>
<div class="container d-flex flex-wrap justify-content-center align-items-center">
  <% @items.each do |item| %>
    <div class="card-container">
      <div class="card-title-section">
        <div class="card-title-section-col-l"><%= item.title %></div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <%= image_tag(item.photo.attached? ? cl_image_path(item.photo.key) : asset_path('https://res.cloudinary.com/diwuyv3c8/image/upload/v1732910542/d11b8dea-8c12-44df-92fc-057e426b5b61.png')) %>
      </div>
      <div class="card-infos-section">
        <p class="card-txt-price">$<%= item.price %></p>
        <p class="text single-line"><%= item.description %></p>
      </div>
      <div class="card-btn-details">
        <%= link_to 'More Details', item_path(item), class: "card-button" %>
      </div>
    </div>
  <% end %>
</div>
