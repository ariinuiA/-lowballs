<div class="container d-flex flex-wrap justify-content-center align-items-center">
  <% @items.each do |item| %>
    <div class="card-container">
      <div class="card-title-section">
        <div class="card-title-section-col-l">
          <p><%= item.title %></p>
        </div>
      </div>
      <div class="d-flex justify-content-center align-items-center">
        <%= image_tag(item.photo.attached? ? cl_image_path(item.photo.key) : asset_path('default_no_image.jpg')) %>
      </div>
      <div class="card-infos-section">
        <p class="card-txt-price">$<%= item.price %></p>
        <p class="text single-line"><%= item.description %></p>
      </div>
      <div class="card-btn-details">
        <%= link_to 'Edit', edit_item_path(item), class: "btn btn-primary" %>

      </div>
    </div>
  <% end %>
</div>
